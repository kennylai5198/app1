<div class="container">

<!-- <h1>Tweets</h1> -->
  <div class="row">
      <div class="col-md-4">
        <% if user_signed_in? %>
          <div class="card" style="width: 18rem;">
            <div class="card-body">
              <!-- <h5 class="card-title">Card title</h5> -->
              <h5 class="card-title">Your Account</h5>
              <!-- <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6> -->
              <p class="card-text"><%= link_to current_user.username, user_path(current_user.username) %></p>
              <!-- <a href="#" class="card-link">Card link</a>
              <a href="#" class="card-link">Another link</a> -->
            </div>
          </div>
        <% else %>
          <!-- <p> Please sign up to post tweets! </p> -->
          <p class="card-text"><%= link_to "Sign up now to be able to start posting!", signup_path %></p>
        <% end %>
      </div>
      <div class="col-md-8">
        <% if user_signed_in? %>
          <%= link_to 'New Tweet', new_tweet_path %>
        <% end %>
        <!-- <table class="table"> -->
          <!-- <thead class="thead-dark">
            <tr>
              <th>User</th>
              <th>Content</th>
              <th colspan="3"></th>
            </tr>
          </thead> -->
          <!-- <tbody> -->
          <ul class="list-group">
              <% @tweets.each do |tweet| %>
                <!-- <tr> -->
                <!-- <li class="list-group-item"> -->
                  <!-- <a href="#" class="list-group-item list-group-item-action flex-column align-items-start"> -->
                  <%= link_to tweet, class: "list-group-item list-group-item-action" do %>
                    <!-- <div class="d-flex w-100 justify-content-between"> -->
                      <h5><%= tweet.user.username %></h5>
                    <!-- </div> -->
                    <p><%= tweet.content %></p>
                      <small>
                        <!-- <%= link_to 'Show', tweet %> -->
                        <% if tweet.user == current_user %>
                          <%= link_to 'Edit', edit_tweet_path(tweet) %>
                          <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %>
                        <% end %>
                      </small>
                  <% end %>
                  <!-- </a> -->
                <!-- </li> -->
                <!-- </tr> -->
              <% end %>
          </ul>
          <!-- </tbody> -->
        <!-- </table> -->
        <!-- <br> -->
        <!-- <% if user_signed_in? %>
          <%= link_to 'New Tweet', new_tweet_path %>
        <% end %> -->
    </div>
  </div>
</div>
